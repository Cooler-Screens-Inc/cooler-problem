{
  "name": "cooler-problem",
  "version": "1.0.0",
  "description": "Auto-generated CSI node service",
  "main": "index.ts",
  "engines": {
    "node": ">=16.14.0"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev -r dotenv/config --respawn --files --quiet --ignore-watch node_modules src/index.ts dotenv_config_path=.env.dev",
    "test-mode": "ts-node -r dotenv/config src/server/index.ts dotenv_config_path=.env.test",
    "seed": "ts-node -r dotenv/config scripts/seed.ts dotenv_config_path=.env.dev",
    "test": "jest src --coverage --runInBand",
    "test:it": "DOTENV_CONFIG_PATH=.env.dev jest test --runInBand --setupFiles=dotenv/config",
    "format": "prettier  --write --config .prettierrc 'src/**/*.ts'",
    "lint": "eslint src --ext .ts",
    "lint-and-fix": "eslint src --ext .ts --fix",
    "healthcheck": "ts-node scripts/health-check.ts",
    "openapi": "ts-node scripts/generate-openapi-spec.ts infra/openapi.json",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Cooler Screens",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.7",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "@types/mssql": "^8.1.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.14",
    "@types/passport": "^1.0.7",
    "@types/passport-azure-ad": "^4.3.1",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "dotenv": "^16.0.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^8.0.3",
    "jest": "^28.1.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.5.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "applicationinsights": "^2.2.1",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "ci": "^2.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "class-validator-jsonschema": "^3.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-openapi-validator": "^4.13.7",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-azure-ad": "^4.3.1",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.1",
    "routing-controllers-openapi": "^2.2.0",
